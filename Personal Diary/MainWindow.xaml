<Window x:Class="Personal_Diary.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Личный дневник" Height="600" Width="900"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <!-- Панель навигации сверху -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Навигационная панель -->
        <Border Grid.Row="0" Background="#2196F3" Height="50" 
                VerticalAlignment="Top">
            <StackPanel Orientation="Horizontal" 
                        VerticalAlignment="Center">
                <Button x:Name="btnDates" Content="📅 Дневник (Dates)" 
                        Width="180" Height="35" Margin="20,0,10,0" 
                        Click="BtnDates_Click" FontWeight="Bold"
                        Background="White" Foreground="#2196F3"
                        BorderBrush="#1976D2" BorderThickness="1"/>
                <Button x:Name="btnNotes" Content="📝 Заметки (Notes)" 
                        Width="180" Height="35" Margin="10,0,20,0" 
                        Click="BtnNotes_Click"
                        Background="Transparent" Foreground="White"
                        BorderBrush="#64B5F6" BorderThickness="1"/>
            </StackPanel>
        </Border>

        <!-- Фрейм для отображения страниц -->
        <Frame x:Name="MainFrame" Grid.Row="1" 
               NavigationUIVisibility="Hidden"
               Background="White"/>
    </Grid>
</Window>